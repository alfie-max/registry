<p id="notice"><%= notice %></p>

<h1>Listing School Interests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school_interests.each do |school_interest| %>
      <tr>
        <td><%= school_interest.name %></td>
        <td><%= link_to 'Show', school_interest %></td>
        <td><%= link_to 'Edit', edit_school_interest_path(school_interest) %></td>
        <td><%= link_to 'Destroy', school_interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

